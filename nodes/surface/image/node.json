{
  "name": "image",
  "ns": "surface",
  "title": "Image surface",
  "description": "A surface containing image content.\n  This extends the Surface class.\n",
  "phrases": {
    "active": "Image surface"
  },
  "require": {
    "famo.us/surfaces/ImageSurface": "0.x.x"
  },
  "ports": {
    "input": {
      "size": {
        "type": "array",
        "title": "Size",
        "description": "[width, height] in pixels",
        "items": {
          "type": "number"
        },
        "minItems": 2,
        "maxItems": 2,
        "async": true,
        "required": false
      },
      "classes": {
        "type": "array",
        "title": "Classes",
        "description": "CSS classes to set on inner content",
        "items": {
          "type": "string"
        },
        "async": true,
        "required": false
      },
      "attributes": {
        "type": "object",
        "title": "Properties",
        "description": "string dictionary of HTML attributes to set on target div",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "value": {
            "type": "string",
            "title": "Value"
          }
        },
        "async": true,
        "required": false
      },
      "image_url": {
        "type": "string",
        "title": "Image url",
        "async": true
      }
    },
    "output": {
      "surface": {
        "type": "ImageSurface",
        "title": "Surface"
      }
    }
  }
}
